<div class="col-md-2 col-sm-12" id="project">
  <h1>projects</h2>

  <%= link_to "new project", new_project_path, class: "btn btn-primary"  %>
  <ul>
    <% @projects.each do |project| %>
      <li>
        <%= link_to "#{project.name}",
          workspaces_path(project_id: project.id) %>&nbsp
        <%= link_to "", edit_project_path(project.id), class: "glyphicon glyphicon-pencil" %>&nbsp
        <%= link_to "", project_path(project.id),
          method: :delete, data: {confirm: "Delete project:【#{project.name}】 Are you sure？"},
         class: "glyphicon glyphicon-remove"%>
    </li>
  <% end %>
  </ul>
</div>
